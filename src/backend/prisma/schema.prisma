generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Visit {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  endAt       DateTime @default(now())
  ip          String
  referrer    String?   @default("")
  country     String?
  countryCode String?
  region      String?
  regionName  String?
  city        String?
  lat         Float?
  lon         Float?
}

model DiscardedIpAddress {
  ip          String   @id
}

model Admin {
  ip          String   @id
}